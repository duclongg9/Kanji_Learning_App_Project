<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_base"
    android:paddingHorizontal="32dp"
    android:paddingVertical="48dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textProfileTitle"
        style="@style/AppText.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_screen_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/personal_card_background"
        app:cardCornerRadius="48dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textProfileTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="36dp"
            android:paddingVertical="40dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textName"
                style="@style/AppText.LargeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textLevel"
                style="@style/AppText.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/profile_level" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:showDividers="middle"
                android:divider="@drawable/divider_space_small">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/AppText.Body"
                    android:text="@string/profile_address" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/AppText.Body"
                    android:text="@string/profile_phone" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/AppText.Body"
                    android:text="@string/profile_version" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textCredit"
                style="@style/AppText.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/profile_credit" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonUpgrade"
                style="@style/AppButton.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/profile_upgrade" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
