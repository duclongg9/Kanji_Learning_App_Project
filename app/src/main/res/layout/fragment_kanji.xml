<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_base">

    <ImageView
        android:id="@+id/backgroundBloom"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:alpha="0.18"
        android:layout_marginEnd="-32dp"
        android:layout_marginBottom="-24dp"
        android:src="@drawable/ic_sakura_blossom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="48dp"
        app:cardBackgroundColor="@color/personal_card_background"
        app:cardCornerRadius="56dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/text_primary"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textKanjiTitle"
                style="@style/AppText.Hero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/kanji_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textKanjiSubtitle"
                style="@style/AppText.BodyLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/kanji_subtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textKanjiTitle" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/kanjiScroll"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textKanjiSubtitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:showDividers="middle"
                    android:divider="@drawable/divider_space_small"
                    android:paddingBottom="16dp">

                    <!-- N5 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/headerN5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/select_option_background"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/text_primary"
                        app:strokeWidth="1dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="80dp"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="20dp">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/AppText.Title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/kanji_section_n5"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iconN5"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_chevron_down"
                                app:tint="@color/text_primary"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/contentN5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@color/select_option_background"
                        android:orientation="vertical"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="20dp"
                        android:visibility="gone">

                        <TextView
                            style="@style/AppText.BodyLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_option_chip"
                            android:gravity="center"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="16dp"
                            android:text="@string/kanji_option_basic" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/bg_option_chip_disabled"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="16dp">

                            <TextView
                                style="@style/AppText.BodyLarge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/kanji_option_intermediate"
                                android:textColor="@color/kanji_option_disabled_text" />

                            <TextView
                                style="@style/AppText.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_vip_badge"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="@string/kanji_option_vip"
                                android:textColor="@color/text_primary" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/bg_option_chip_disabled"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="16dp">

                            <TextView
                                style="@style/AppText.BodyLarge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/kanji_option_advanced"
                                android:textColor="@color/kanji_option_disabled_text" />

                            <TextView
                                style="@style/AppText.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_vip_badge"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="@string/kanji_option_vip"
                                android:textColor="@color/text_primary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- N4 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/headerN4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/select_option_background"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/text_primary"
                        app:strokeWidth="1dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="80dp"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="20dp">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/AppText.Title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/kanji_section_n4"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iconN4"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_chevron_down"
                                app:tint="@color/text_primary"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/contentN4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@color/select_option_background"
                        android:orientation="vertical"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="20dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_option_chip_disabled"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="16dp">

                            <TextView
                                style="@style/AppText.BodyLarge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/kanji_option_basic"
                                android:textColor="@color/kanji_option_disabled_text" />

                            <TextView
                                style="@style/AppText.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_vip_badge"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="@string/kanji_option_vip"
                                android:textColor="@color/text_primary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- N3 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/headerN3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/select_option_background"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/text_primary"
                        app:strokeWidth="1dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="80dp"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="20dp">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/AppText.Title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/kanji_section_n3"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iconN3"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_chevron_down"
                                app:tint="@color/text_primary"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/contentN3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@color/select_option_background"
                        android:orientation="vertical"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="20dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_option_chip_disabled"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="16dp">

                            <TextView
                                style="@style/AppText.BodyLarge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/kanji_option_basic"
                                android:textColor="@color/kanji_option_disabled_text" />

                            <TextView
                                style="@style/AppText.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_vip_badge"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="@string/kanji_option_vip"
                                android:textColor="@color/text_primary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- N2 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/headerN2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/select_option_background"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/text_primary"
                        app:strokeWidth="1dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="80dp"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="20dp">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/AppText.Title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/kanji_section_n2"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iconN2"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_chevron_down"
                                app:tint="@color/text_primary"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/contentN2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@color/select_option_background"
                        android:orientation="vertical"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="20dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_option_chip_disabled"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="16dp">

                            <TextView
                                style="@style/AppText.BodyLarge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/kanji_option_basic"
                                android:textColor="@color/kanji_option_disabled_text" />

                            <TextView
                                style="@style/AppText.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_vip_badge"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="@string/kanji_option_vip"
                                android:textColor="@color/text_primary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- N1 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/headerN1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/select_option_background"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/text_primary"
                        app:strokeWidth="1dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="80dp"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="20dp">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/AppText.Title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/kanji_section_n1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iconN1"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_chevron_down"
                                app:tint="@color/text_primary"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/contentN1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@color/select_option_background"
                        android:orientation="vertical"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="20dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_option_chip_disabled"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="16dp">

                            <TextView
                                style="@style/AppText.BodyLarge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/kanji_option_basic"
                                android:textColor="@color/kanji_option_disabled_text" />

                            <TextView
                                style="@style/AppText.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_vip_badge"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="@string/kanji_option_vip"
                                android:textColor="@color/text_primary" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
