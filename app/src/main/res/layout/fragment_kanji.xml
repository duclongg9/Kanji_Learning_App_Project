                    app:cardCornerRadius="32dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/AppText.Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/kanji_section_n3" />

                        <ImageView
                            android:id="@+id/iconN3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:rotation="0"
                            android:src="@drawable/ic_chevron_down"
                            app:tint="@color/text_primary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/contentN3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@color/select_option_background"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="20dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_option_chip_disabled"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/figma_hand"
                            android:text="@string/kanji_option_basic"
                            android:textColor="@color/kanji_option_disabled_text"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_vip_badge"
                            android:fontFamily="@font/figma_hand"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="6dp"
                            android:text="@string/kanji_option_vip"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- N2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/headerN2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/select_option_background"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/AppText.Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/kanji_section_n2" />

                        <ImageView
                            android:id="@+id/iconN2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:rotation="0"
                            android:src="@drawable/ic_chevron_down"
                            app:tint="@color/text_primary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/contentN2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@color/select_option_background"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="20dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_option_chip_disabled"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/figma_hand"
                            android:text="@string/kanji_option_basic"
                            android:textColor="@color/kanji_option_disabled_text"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_vip_badge"
                            android:fontFamily="@font/figma_hand"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="6dp"
                            android:text="@string/kanji_option_vip"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- N1 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/headerN1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/select_option_background"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/AppText.Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/kanji_section_n1" />

                        <ImageView
                            android:id="@+id/iconN1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:rotation="0"
                            android:src="@drawable/ic_chevron_down"
                            app:tint="@color/text_primary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/contentN1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/select_option_background"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="20dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_option_chip_disabled"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/figma_hand"
                            android:text="@string/kanji_option_basic"
                            android:textColor="@color/kanji_option_disabled_text"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_vip_badge"
                            android:fontFamily="@font/figma_hand"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="6dp"
                            android:text="@string/kanji_option_vip"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
