<?xml version="1.0" encoding="utf-8"?>
<!-- VI: Màn hình Home cho user FREE/VIP với hai thẻ chính -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/homeMenuHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_menu_header"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/sakura_text" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardKanjiTheory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/sakura_card"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/kanjiCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_kanji_card_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/sakura_text" />

                <TextView
                    android:id="@+id/kanjiCardDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/home_kanji_card_description"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="@color/sakura_text" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/accessChipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/freeChip"
                        style="@style/Widget.MaterialComponents.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="false"
                        android:clickable="false"
                        android:text="@string/home_access_free"
                        android:textColor="@color/pinkAccent"
                        app:chipBackgroundColor="@color/home_chip_free_background"
                        app:chipCornerRadius="12dp"
                        app:chipStrokeWidth="0dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/vipChip"
                        style="@style/Widget.MaterialComponents.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.35"
                        android:checkable="false"
                        android:clickable="false"
                        android:text="@string/home_access_vip"
                        android:textColor="@color/pinkAccent"
                        app:chipBackgroundColor="@color/home_chip_vip_background"
                        app:chipCornerRadius="12dp"
                        app:chipStrokeWidth="0dp" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/sakura_card"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/quizCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_quiz_card_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/sakura_text" />

                <TextView
                    android:id="@+id/quizCardDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/home_quiz_card_description"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="@color/sakura_text" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/practiceLevelLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/home_quiz_level_hint"
                    app:endIconMode="dropdown">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/practiceLevelDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:dropDownHeight="wrap_content"
                        android:dropDownWidth="match_parent"
                        android:inputType="none"
                        android:importantForAutofill="no"
                        android:textColor="@color/sakura_text"
                        android:textColorHint="@android:color/darker_gray"
                        app:simpleItems="@array/practice_levels" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/practicePlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/home_quiz_placeholder"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
