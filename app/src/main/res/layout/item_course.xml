<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:foreground="?attr/selectableItemBackground"
    android:background="@android:color/transparent"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="28dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_glass_card"
        android:padding="20dp">

        <View
            android:id="@+id/accentBar"
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_neon_outline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLevel"
            style="@style/Widget.Material3.Chip.Assist.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="N5"
            android:textColor="@color/holo_cyan"
            app:chipBackgroundColor="@color/glass_surface"
            app:layout_constraintStart_toEndOf="@id/accentBar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textTitle"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Kanji cơ bản"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/accentBar"
            app:layout_constraintTop_toBottomOf="@id/chipLevel" />

        <TextView
            android:id="@+id/textDescription"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Mô tả"
            android:textColor="@color/glass_highlight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/accentBar"
            app:layout_constraintTop_toBottomOf="@id/textTitle" />

        <TextView
            android:id="@+id/textLessons"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="3 bài học"
            android:textColor="@color/glass_highlight"
            app:layout_constraintStart_toEndOf="@id/accentBar"
            app:layout_constraintTop_toBottomOf="@id/textDescription" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            app:indicatorColor="@color/holo_magenta"
            app:trackColor="@color/glass_highlight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/accentBar"
            app:layout_constraintTop_toBottomOf="@id/textLessons" />

        <TextView
            android:id="@+id/textProgress"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Hoàn thành 20%"
            android:textColor="@color/glass_highlight"
            app:layout_constraintStart_toEndOf="@id/accentBar"
            app:layout_constraintTop_toBottomOf="@id/progress" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPrimary"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Khám phá"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/holo_magenta"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textProgress" />

        <TextView
            android:id="@+id/textPrice"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="79.000đ"
            android:textColor="@color/holo_magenta"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/accentBar"
            app:layout_constraintTop_toBottomOf="@id/textProgress" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLocked"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="VIP"
            android:textAllCaps="false"
            android:textColor="@color/holo_cyan"
            android:visibility="gone"
            app:chipBackgroundColor="@color/glass_surface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textProgress" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
