<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_8"
    android:background="@drawable/pill_chip"
    android:orientation="vertical"
    android:padding="@dimen/space_12">

    <TextView
        android:id="@+id/textCharacter"
        style="@style/AppText.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="漢" />

    <TextView
        android:id="@+id/textMeaning"
        style="@style/AppText.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:text="Ý nghĩa" />

    <TextView
        android:id="@+id/textPronunciation"
        style="@style/AppText.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_4"
        android:text="Âm ON / âm KUN" />

    <TextView
        android:id="@+id/textDifficulty"
        style="@style/AppText.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_4"
        android:text="Độ khó" />
</LinearLayout>
