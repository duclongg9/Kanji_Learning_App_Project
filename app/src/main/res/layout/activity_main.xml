<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/topPetal"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="start"
            android:layout_marginTop="12dp"
            android:alpha="0.35"
            android:contentDescription="@null"
            android:src="@drawable/ic_sakura_blossom" />

        <ImageView
            android:id="@+id/bottomPetal"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="-20dp"
            android:layout_marginEnd="-10dp"
            android:alpha="0.25"
            android:contentDescription="@null"
            android:rotation="195"
            android:src="@drawable/ic_sakura_blossom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="40dp"
                app:cardBackgroundColor="@color/sakura_card"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/login_primary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <ImageView
                        android:id="@+id/logoImage"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:contentDescription="@string/login_logo_content_description"
                        android:src="@drawable/ic_sakura_blossom" />

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.04"
                        android:text="@string/login_title"
                        android:textAlignment="center"
                        android:textColor="@color/sakura_text"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/subtitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/login_subtitle"
                        android:textAlignment="center"
                        android:textColor="@color/sakura_text"
                        android:textSize="16sp" />

                    <com.google.android.gms.common.SignInButton
                        android:id="@+id/googleSignInButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        app:buttonSize="wide" />

                    <TextView
                        android:id="@+id/orSeparator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/login_alt_label"
                        android:textColor="@color/sakura_text"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/kanjiIconButton"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:backgroundTint="@color/login_primary"
                        android:text="@string/login_kanji_symbol_button"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:cornerRadius="20dp"
                        app:icon="@drawable/ic_kanji_placeholder"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconTint="@android:color/white" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/testingButton"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/login_testing_button"
                        android:textAllCaps="false"
                        android:textColor="@color/login_primary"
                        android:textSize="16sp"
                        app:cornerRadius="20dp"
                        app:rippleColor="@color/login_ripple"
                        app:strokeColor="@color/login_primary"
                        app:strokeWidth="1dp" />

                    <TextView
                        android:id="@+id/disclaimerText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:alpha="0.8"
                        android:text="@string/login_disclaimer"
                        android:textAlignment="center"
                        android:textColor="@color/sakura_text"
                        android:textSize="12sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </FrameLayout>
</ScrollView>
