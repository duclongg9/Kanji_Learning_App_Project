<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextTitle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/figma_hand</item>
    </style>

    <style name="TextBody">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/figma_hand</item>
    </style>

    <style name="TextCaption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/figma_hand</item>
    </style>

    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/select_option_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/figma_hand</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/personal_card_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/figma_hand</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextDropdownItem">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/figma_hand</item>
    </style>

    <style name="MenuFieldStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/personal_card_background</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="android:hintTextColor">@color/text_secondary</item>
    </style>

    <style name="MenuFieldText">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/figma_hand</item>
    </style>
</resources>
