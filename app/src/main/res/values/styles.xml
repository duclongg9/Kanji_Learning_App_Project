<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/figma_hand</item>
    </style>

    <style name="AppText.Hero" parent="AppText">
        <item name="android:textSize">56sp</item>
        <item name="android:lineHeight">64sp</item>
    </style>

    <style name="AppText.LargeTitle" parent="AppText">
        <item name="android:textSize">48sp</item>
        <item name="android:lineHeight">54sp</item>
    </style>

    <style name="AppText.Title" parent="AppText">
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">40sp</item>
    </style>

    <style name="AppText.BodyLarge" parent="AppText">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">28sp</item>
    </style>

    <style name="AppText.Body" parent="AppText">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">24sp</item>
    </style>

    <style name="AppText.Caption" parent="AppText">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <style name="AppText.Disabled" parent="AppText">
        <item name="android:textColor">@color/kanji_option_disabled_text</item>
    </style>

    <style name="AppButton.Primary" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/select_option_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/figma_hand</item>
        <item name="cornerRadius">36dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="AppButton.Login" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/figma_hand</item>
        <item name="cornerRadius">36dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
</resources>
